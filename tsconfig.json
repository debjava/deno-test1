{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "pretty": true,
        "skipLibCheck": true,
        "lib": [
            "es2016",
            "es2017",
            "es2018",
            "esnext",
            "dom"
        ],
    },
    "include": [
        "src/app/**/*.ts"
    ],
    "exclude": [
        "**/node_modules/*",
        "dist",
        "build",
        "src/app/**/*.spec.ts"
    ]
}
